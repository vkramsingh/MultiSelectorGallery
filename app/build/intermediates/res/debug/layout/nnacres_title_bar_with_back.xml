<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/postYourPropertyTitleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ppf_header_border_image"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

    <TextView
        android:id="@+id/title"
        android:background="@android:color/transparent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:inputType="none"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"

        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/searchform_title_textcolor"
        android:textSize="16sp"
        android:drawablePadding="5dp"
        android:text="Upload Photos"
        android:padding="6dp"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/emptyString"
        android:padding="6dp"
        android:src="@drawable/ic_action_back"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/searchform_title_textcolor"
        android:text="OK"
        android:id="@+id/toolbar_ok"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/searchform_title_textcolor"
        android:text="Crop"
        android:id="@+id/toolbar_crop"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/searchform_title_textcolor"
        android:text="Delete"
        android:id="@+id/toolbar_delete"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

</RelativeLayout><!-- From: file:/home/vkramsingh/nnAcres/MultipleImageSelector/app/src/main/res/layout/nnacres_title_bar_with_back.xml -->